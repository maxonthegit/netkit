. /opt/netkit-setup/utils.sh

becho "Creating temporary file (in /tmp on the host) that determines that the setup is running"
mkdir -p /temphost
mount -t hostfs -o rw,/tmp none /temphost
: > /temphost/.netkit-setup-running
# Remove the directory in order to prevent it (or its contents) from being indexed by locate
umount /temphost
rmdir /temphost

